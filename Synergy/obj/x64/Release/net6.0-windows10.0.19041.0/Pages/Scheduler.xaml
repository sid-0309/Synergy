        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ListView x:ConnectionId='3' x:Name="scheduleList" Grid.Row="0" Grid.Column="0">
            <ListViewItem Content="job1"/>
            <ListViewItem Content="job2"/>
        </ListView>
    </Grid>
</Page>

